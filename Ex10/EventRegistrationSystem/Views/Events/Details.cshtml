@model EventRegistrationSystem.Models.Event

@{
    ViewData["Title"] = "Szczegóły wydarzenia";
}

<h2>Szczegóły wydarzenia</h2>

<dl class="row">
    <dt class="col-sm-2">Tytuł</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Data</dt>
    <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

    <dt class="col-sm-2">Opis</dt>
    <dd class="col-sm-10">@Model.Description</dd>
</dl>

<a asp-controller="Participants" asp-action="Create" asp-route-eventId="@Model.Id" class="btn btn-primary">Dodaj uczestnika</a>
<a asp-controller="Participants" asp-action="ListByEvent" asp-route-eventId="@Model.Id" class="btn btn-info ml-2">Pokaż uczestników</a>

<a asp-action="Index" class="btn btn-secondary">Powrót</a>
